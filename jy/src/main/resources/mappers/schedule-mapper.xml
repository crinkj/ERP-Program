<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="scheduleMapper">

	<resultMap type="ScheduleDto" id="scheduleResultSet">
		<id property="_id" column="schedule_no"/>
		<result property="memberNo" column="member_no"/>
		<result property="departmentNo" column="department_no"/>
		<result property="content" column="content"/>
		<result property="startDate" column="start_date"/>
		<result property="endDate" column="end_date"/>
		<result property="title" column="title"/>
		<result property="backColor" column="back_color"/>
		<result property="allDay" column="all_day"/>
	</resultMap>

	<insert id="insertSchedule" parameterType="ScheduleDto">
		INSERT INTO SCHEDULE
		VALUES(#{scheduleNo}, #{memberNo}, #{departmentNo}, #{content}, to_date(#{startDate}, 'YYYY/MM/DD HH24:MI:SS'), to_date(#{endDate}, 'YYYY/MM/DD HH24:MI:SS'), #{title}, #{backColor}, #{allDay}, #{type})
	</insert>

</mapper>